<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/iv_sub_menu_left_end"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:background="@drawable/submenu_left_end4" />

    <TextView
        android:id="@+id/tv_sub_menu_item_name"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/sub_menu_item_focus"
        android:gravity="center"
        android:text="Sub Menu 1"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/iv_sub_menu_item_separator"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/separator_vertical" />
    
    <ImageView
        android:id="@+id/iv_sub_menu_right_end"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:src="@drawable/submenu_right_end3" />
    
    
</LinearLayout>
